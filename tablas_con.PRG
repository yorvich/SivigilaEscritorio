PARAMETERS BASE, CAMPO1, CAMPO2, TITULO, sFilter as String


X=_DIR+'\BUSCAR'
dev_reg=1
OLDESC=ON('KEY','ESCAPE')
tit('Por favor espere, Ordenando datos...')
SET TALK ON
SET EXCLUSIVE ON 

IF PCOUNT()=4 THEN
	SELECT &CAMPO1 AS CODIGO, &CAMPO2 AS NOMBRE, RECNO() as registro FROM  &BASE ORDER BY 2 INTO TABLE (X)
ELSE
	IF PCOUNT()=5 THEN
		SELECT &CAMPO1 AS CODIGO, &CAMPO2 AS NOMBRE, RECNO() as registro FROM  &BASE WHERE &sFilter ORDER BY 2 INTO TABLE (X)
	ENDIF
ENDIF
SET EXCLUSIVE Off
SET TALK OFF
tit('Ok')
do form tablas_con
SELECT &base
GO dev_reg
ON KEY LABEL ESC &OLDESC